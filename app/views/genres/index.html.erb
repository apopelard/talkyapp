<div class="page-header">
  <h1>Genres</h1>
</div>

<p><%= link_to 'Add a New Genre', new_genre_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Story</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.story.name %></td>
        <td><%= genre.category.name %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, genre_url(genre), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_genre_url(genre), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, genre_url(genre), method: 'delete', data: { confirm: "Do you really want to delete this genre?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

