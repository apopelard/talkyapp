<div class="page-header">
  <h1>New Genre</h1>
</div>

<%= form_tag(genres_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :story_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :story_id, options_from_collection_for_select(@stories, "id", "name"), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :category_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :category_id, options_from_collection_for_select(@categories, "id", "name"), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Genre", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
