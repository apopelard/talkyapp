<div class="panel panel-primary round">
  <div class="panel-heading top_round">
    <h2>Edit - <%= @user.full_name %></h2>
  </div>
  <div class="panel-body">
    <div class="container">
      <div class="row">


<%= form_tag(user_url(@user), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :username, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :username, @user.username, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :first_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :first_name, @user.first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :last_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :last_name, @user.last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :location, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :location, @user.location, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :picture_url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :picture_url, @user.picture_url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :email, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :email, @user.email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update User", class: 'btn btn-primary round' %>
    </div>
  </div>
<% end %>
</div>
  </div>
</div>
