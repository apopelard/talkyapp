<div class="panel panel-primary round">
  <div class="panel-heading top_round">
    <h2>New Story</h2>
  </div>
  <div class="panel-body">
    <div class="container">
      <div class="row">

<%= form_tag(stories_url, method: 'post', class: 'form-horizontal', multipart: true) do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :description, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :address1, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :address1, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :address2, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :address2, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :postcode, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :postcode, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :city, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :city, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :state, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :state, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :country, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :country, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :image, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= file_field_tag :image %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :audio, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= file_field_tag :audio %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2 control-label">
      <strong>Categories</strong>
    </div>
    <div class="col-md-8">
      <% Category.all.each do |category| %>
        <%= check_box_tag(category.id,"yes") %>
        <%= label_tag(category.id, category.name.capitalize) %>
        &nbsp;
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-6">
      <%= hidden_field_tag :user_id, current_user.id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Story", class: 'btn btn-primary round' %>
    </div>
  </div>
<% end %>
    </div>
  </div>
</div>
