<div class="page-header">
  <h1>Editing Follower #<%= @follower.id %></h1>
</div>

<%= form_tag(follower_url(@follower), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @follower.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :following_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :following_id, @follower.following_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :favorite, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :favorite, 1, @follower.favorite? %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Follower", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
